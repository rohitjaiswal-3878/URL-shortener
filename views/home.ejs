<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        table {
            margin-top: 20px;
        }
        table, th, td {
            border-collapse: collapse;
            padding: 10px;
            font-size: 0.7rem;
        }
    </style>
</head>
<body>
    <h1>URL Shortener</h1>
    <% 
        if(locals.id) {
            %>
            <p>URL generated: <a href="/api/<%= id %>">http://localhost:8001/api/<%= locals.id %></a></p>
            <%
        }
    %>
    <div>
        <form method="POST" action="/url">
            <label for="">Enter your original URL</label>
            <input type="text"  name="url" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>

    <div>
        <% if(locals.urls){
            %>
            <table border="1">

                <thead>
                    <tr>
                    <th>S.No</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </tr>
                </thead>
                    <% 
                    urls.forEach((url,index) => {
                        %>
                        <tr>
                        <td><%= index+1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                        <%
                    })
                    %>
                <tbody>
                </tbody>
            </table>
            <%
        }%>
    </div>
</body>
</html>